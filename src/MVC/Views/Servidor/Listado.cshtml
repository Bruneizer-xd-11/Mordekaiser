@model IEnumerable<Mordekaiser.Core.Servidor>

@{
    ViewData["Title"] = "Lista de Servidores";
}

<h1>Lista de Servidores</h1>

<div class="d-flex gap-2 align-items-center">
    <a class="btn btn-success" asp-action="Crear">Crear Servidor</a>
    <form asp-action="BorrarTodos" method="post" class="m-0"
         onsubmit="return confirm('Esto borrara todos los servidores y las cuentas asociadas, Seguro?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Borrar todo</button>
    </form>
</div>


@if (!Model.Any())
{
    <p>No hay servidores cargados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Abreviado</th>
                <th style="background-color:white;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var servidor in Model)
        {
            <tr>
                <td>@servidor.idServidor</td>
                <td>@servidor.Nombre</td>
                <td>@servidor.Abreviado</td>
                <td>
                    <a asp-action="Borrar" asp-route-id="@servidor.idServidor" 
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Â¿Seguro que quieres borrar este servidor?');">
                        Borrar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
