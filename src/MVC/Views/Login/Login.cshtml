@model Mordekaiser.Core.LoginViewModel

<h2 class="text-center mb-4">Iniciar sesión</h2>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form method="post" asp-action="Login" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
        <label class="form-label">Usuario o Email</label>
        <input type="text" class="form-control" asp-for="UserOrEmail" />
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <button class="btn btn-primary w-100" type="submit">Ingresar</button>

    <div class="text-center mt-3">
        <span>¿No tienes cuenta? </span>
<a href="/Login/Registro">Registrarse</a>


    </div>
</form>
