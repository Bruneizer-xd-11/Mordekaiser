<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mordekaiser Project</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var rol = HttpContextAccessor.HttpContext.Session.GetString("UsuarioRol");
}

<body class="bg-light">

    <header>


        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">

                    <a class="navbar-brand" href="/Home/Index">Riot Games</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">

                        <ul class="navbar-nav me-auto">

                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index">Inicio</a>
                            </li>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Servidor/Listado">Servidor</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/Cuenta/Listado">Cuenta</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" href="/CuentaValorant/Listado">Cuenta Valorant</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/CuentaLol/Listado">Cuenta LoL</a>
                            </li>

                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="nav-link btn btn-link text-danger fw-bold">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                    </button>
                                </form>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        }

    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <small>Proyecto Riot Games — 5to 7ma © @DateTime.Now.Year</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>