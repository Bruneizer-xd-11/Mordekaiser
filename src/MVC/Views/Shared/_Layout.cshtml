<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mordekaiser Project</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

        <a class="navbar-brand" href="/Home/Index">Riot Games</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Inicio</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Servidor/Listado">Servidor</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Cuenta/Listado">Cuenta</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/CuentaValorant/Listado">Cuenta Valorant</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/CuentaLol/Listado">Cuenta LoL</a>
                </li>

            </ul>

        </div>
    </div>
</nav>
    </header>

    <!-- Contenido principal -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <small>Proyecto Riot Games — 5to 7ma © @DateTime.Now.Year</small>
    </footer>

    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
