@model IEnumerable<Mordekaiser.Core.Cuenta>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Listado de Cuentas";
    var rol = HttpContextAccessor.HttpContext.Session.GetString("UsuarioRol");
    var miId = HttpContextAccessor.HttpContext.Session.GetInt32("UsuarioId");
}

<h1>Listado de Cuentas</h1>
<div class="d-flex gap-2 mb-3">
    <a class="btn btn-success" asp-action="Crear">Crear Cuenta</a>
</div>

@if (Model == null || !Model.Any())
{
    <p>No hay cuentas cargadas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Servidor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cuenta in Model)
        {
            <tr>
                <td>
                    @if(rol == "Admin" || cuenta.IdCuenta == miId)
                    {
                        @cuenta.IdCuenta
                    }
                    else
                    {
                        <text>-</text>
                    }
                </td>
                <td>@cuenta.Nombre</td>
                <td>@cuenta.Email</td>
                <td>@cuenta.Servidor?.Nombre</td>
                <td>
                    <form asp-action="BorrarPorId" asp-route-id="@cuenta.IdCuenta" method="post" class="d-inline"
                          onsubmit="return confirm('Â¿Seguro que deseas borrar esta cuenta?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
