@model IEnumerable<Mordekaiser.Core.Cuenta>

@{
    ViewData["Title"] = "Listado de Cuentas";
}
<h1>Listado de Cuentas</h1>
<div class="d-flex gap-2 mb-3">
    <a class="btn btn-success" asp-action="Crear">Crear Cuenta</a>

    <form asp-action="BorrarTodos" method="post" class="m-0"
          onsubmit="return confirm('⚠️ Esto borrará TODAS las cuentas y las de Valorant asociadas. ¿Seguro?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Borrar TODAS</button>
    </form>
</div>
@if (Model == null || !Model.Any())
{
    <p>No hay cuentas cargadas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Servidor</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cuenta in Model)
        {
            <tr>
                <td>@cuenta.IdCuenta</td>
                <td>@cuenta.Nombre</td>
                <td>@cuenta.Email</td>
                <td>@cuenta.Servidor?.Nombre</td>
                <td>
    <form asp-action="Borrar" asp-route-id="@cuenta.IdCuenta" method="post" class="d-inline"
          onsubmit="return confirm('¿Seguro que deseas borrar esta cuenta?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
    </form>
</td>
            </tr>
        }
        </tbody>
    </table>
}
